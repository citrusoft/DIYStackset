{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "workspaces": {
            "$id": "#root/workspaces",
            "title": "Workspaces",
            "type": "object",
            "propertyNames": {
                "pattern": "^[A-Za-z0-9-][A-Za-z0-9-]*$"
            },
            "additionalProperties": {
                "properties": {
                    "read_only_ad_group": {
                        "type": "string",
                        "title": "AD group that grants read access to workspace",
                        "minLength": 1
                    },
                    "apply_ad_group": {
                        "type": "string",
                        "title": "AD group that grants apply access to workspace",
                        "minLength": 1
                    },
                    "github_repo": {
                        "type": "string",
                        "title": "valid github repo",
                        "minLength": 1
                    },
                    "github_org": {
                        "type": "string",
                        "title": "valid github org",
                        "minLength": 1,
                        "enum": ["pgetech", "PGEDigitalCatalyst"]
                    },
                    "tags": {
                        "type": "array",
                        "title": "tags for the workspaces",
                        "minLength": 1
                    },
                    "environment": {
                        "type": "object",
                        "title": "Environment specific values",
                        "minLength": 3,
                        "additionalProperties": {
                            "properties": {
                                "queue_all_runs": {
                                "type": "boolean"
                                },
                                "account": {
                                "type": "string"
                                },
                                "branch": {
                                "type": "string"
                                },
                                "auto_apply": {
                                "type": "boolean"
                                },
                                "working_diretory": {
                                "type": "string"
                                },
                                "var_file": {
                                    "type": "string"
                                },
                                "parallelism": {
                                    "type": "number"
                                }
                            },
                            "required": [ "account", "branch" ]
                            }
                        }
                    },
                    "required": [
                        "read_only_ad_group",
                        "apply_ad_group",
                        "github_repo",
                        "environment"
                    ]
                }
            }
        }
    }